<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/bookMarkCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/Transparent"
        app:cardCornerRadius="40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardBackgroundColor="@color/LightGreen"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/bookMarkIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center"
                android:layout_marginEnd="20dp"
                android:src="@drawable/bookmark_24" />

            <TextView
                android:id="@+id/ayahNumberTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="الاية 285"
                android:textColor="@color/DarkGreenExtra"
                android:textSize="9pt"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/soraNameCircleCard"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:layout_alignParentLeft="true"
            app:cardBackgroundColor="@color/DarkGreen"
            app:cardCornerRadius="40dp">

            <TextView
                android:id="@+id/soraNameTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="البقرة"
                android:textColor="@color/LightGreen"
                android:textSize="9pt"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


</RelativeLayout>