<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Brown"
    android:orientation="vertical">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/LightBrownPlus"
        app:cardCornerRadius="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/ayahCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/LightGreen"
                app:cardCornerRadius="40dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/circleCard"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="15dp"
                        android:layout_alignParentRight="true"
                        app:cardBackgroundColor="@color/DarkGreen"
                        app:cardCornerRadius="100dp">

                        <TextView
                            android:id="@+id/ayahNumberTv"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="4"
                            android:textColor="@color/LightGreen"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/soraNameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="سورة البقرة"
                        android:gravity="center"
                        android:textColor="@color/DarkGreen"
                        android:textStyle="bold"
                        android:textSize="8pt"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/ayahTv"
                        android:layout_below="@id/soraNameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:padding="15dp"
                        android:text="@string/ayahTest"
                        android:fontFamily="@font/quran_font"
                        android:textColor="@color/DarkGreenB"
                        android:textSize="11pt" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tafsirTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ayahCard"
                android:gravity="center"
                android:padding="15dp"
                android:fontFamily="@font/tafsir_font_a"
                android:text="@string/tafsirTest"
                android:textColor="@color/DarkBrownPlusB"
                android:textSize="9pt"
                android:textIsSelectable="true"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/LightBrownPlus"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">



            <ImageView
                android:id="@+id/removeIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/remove_outline_24" />

            <ImageView
                android:id="@+id/tafsirIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/tafsir_24" />

            <ImageView
                android:id="@+id/shareIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/share_24" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>